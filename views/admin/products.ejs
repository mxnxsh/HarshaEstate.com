<%- include ("./../partials/adminHeader") %>
<div class="container">
    <%- include ("./../partials/messages") %>
</div>
<div class="container table-responsive">
    <h3 class="page-title">Residential Property</h3>
    <a href="/admin/products/add_products"
        class="btn btn-primary">Add Property</a>
    <br><br>
    <table class="table table-hover propertyList">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Product Image</th>
                <th scope="col">ON/OFF</th>
                <th scope="col">Action</th>
                <!--<th scope="col">Delete</th>-->
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product,index){%>
            <tr>
                <td>
                    <%=product.title%>
                </td>
                <td>
                    <%=product.price%>
                </td>
                <td>
                    <%=product.category%>
                </td>
                <td>
                    <%if(product.avatar===''){%>
                    <img id="noimage"
                        src="/images/noimage.png">
                    <%}else{%>
                    <img src="/uploads/avatar/<%=product.avatar%>"
                        style="width: 100px; height: 70px;"></td>
                <%}%>
            <td>
                <div>
                    <%=product.isOn%>
</div>
</td>
<td>
    <div class="d-flex flex-row">

        <p data-placement="top"
            data-toggle="tooltip"><a class="btn btn-primary btn-xs ml-1 "
                href="/admin/products/edit_products/<%=product._id%>"><img src="/images/edit.svg"></a>
        </p>
        <p data-placement="top"
            data-toggle="tooltip"><a class="btn btn-danger btn-xs ml-1"
                href="/admin/products/delete_product/<%=product._id%>"><img src="/images/trash-2.svg"></a></p>
    </div>
</td>


<!--<td><a href="/admin/edit_products"><span class="glyphicon glyphicon-pencil"></span></a></td>
                            <td><a href="/admin/delete_product/<%=product._id%>">Delete</a></td>-->
</tr>
<%})%>


</tbody>
</table>
</div>
<%- include ("./../partials/adminFooter") %>